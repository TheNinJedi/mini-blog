<p id="notice"><%= notice %></p>

<h1>
  <%= @author.full_name %>
</h1>
<p>
  <%= @author.username %> | 
  <%= mail_to @author.email %> | 
  <%= link_to "@#{@author.twitter}", @author.twitter_link, target:'_blank' %>
</p>

<p>
  <b>Username:</b>
  <%= @author.username %>
</p>

<p>
  <b>Bio:</b>
  <%= @author.bio %>
</p>

<p>
  <b>Email:</b>
  <%= @author.email %>
</p>


<hr />
<h3> <%= @author.first_name%>'s posts</h3>
<% @author.posts.each do |post| %>
  <h2><%= link_to post.title.titleize, post %></h2>
  <%# post.author.username if post.author %>
  <h4><%= time_tag(post.published_at.to_date) %></h4>
  <p><%= simple_format(post.body) %></p>
<% end %>

<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
